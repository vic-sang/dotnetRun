@page
@model dotnetRun.Pages_Orders.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Order</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Order.OrderID" />
            <div class="form-group">
                <label asp-for="Order.CustomerID" class="control-label"></label>
                <select asp-for="Order.CustomerID" class="form-control" asp-items="ViewBag.CustomerID"></select>
                <span asp-validation-for="Order.CustomerID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Order.ShopperID" class="control-label"></label>
                <select asp-for="Order.ShopperID" class="form-control" asp-items="ViewBag.ShopperID"></select>
                <span asp-validation-for="Order.ShopperID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Order.itemID" class="control-label"></label>
                <input asp-for="Order.itemID" class="form-control" />
                <span asp-validation-for="Order.itemID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Order.Qty" class="control-label"></label>
                <input asp-for="Order.Qty" class="form-control" />
                <span asp-validation-for="Order.Qty" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

